<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.felipe.gochi.orama.FundoInvestimentoActivity"
    tools:showIn="@layout/activity_fundo_investimento">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:text="Fundo"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_stars_black_24dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Investidor qualificado"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_block_black_24dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fundo fechado"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#f57c00"
                        android:src="@drawable/ic_trending_up_black_24dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Aplicar neste fundo"
                        />
                    android:text="Fundo para investidor qualificado"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:layout_marginLeft="60dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Risco -"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <android.support.v7.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="4dp"
                        android:layout_gravity="bottom"
                        android:backgroundTint="#06ecfc"
                        android:layout_margin="1.5dp">
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="4dp"
                        android:layout_gravity="bottom"
                        android:backgroundTint="#68f1dd"
                        android:layout_margin="1.5dp">
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="4dp"
                        android:layout_gravity="bottom"
                        android:backgroundTint="#91ed6e"
                        android:layout_margin="1.5dp">
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="4dp"
                        android:layout_gravity="bottom"
                        android:backgroundTint="#91ed6e"
                        android:layout_margin="1.5dp">
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="4dp"
                        android:layout_gravity="bottom"
                        android:backgroundTint="#b0f42a"
                        android:layout_margin="1.5dp">
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="4dp"
                        android:layout_gravity="bottom"
                        android:backgroundTint="#ddf40c"
                        android:layout_margin="1.5dp">
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="4dp"
                        android:layout_gravity="bottom"
                        android:backgroundTint="#faf00e"
                        android:layout_margin="1.5dp">
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="4dp"
                        android:layout_gravity="bottom"
                        android:backgroundTint="#ffbb00"
                        android:layout_margin="1.5dp">
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="4dp"
                        android:layout_gravity="bottom"
                        android:backgroundTint="#ff8800"
                        android:layout_margin="1.5dp">
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="4dp"
                        android:layout_gravity="bottom"
                        android:backgroundTint="#ff5e00"
                        android:layout_margin="1.5dp">
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="4dp"
                        android:layout_gravity="bottom"
                        android:backgroundTint="#ff5e00"
                        android:layout_margin="1.5dp">
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="4dp"
                        android:layout_gravity="bottom"
                        android:backgroundTint="#ff0600"
                        android:layout_margin="1.5dp">
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="4dp"
                        android:layout_gravity="bottom"
                        android:backgroundTint="#651414"
                        android:layout_margin="1.5dp">
                    </android.support.v7.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Risco +"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/progress_bar"
            android:layout_gravity="center_horizontal"
            />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</RelativeLayout>
